{
  "extends": [
    "tslint:recommended",
    "plugin:react/recommended",
    "react-app",
    "tslint-react"
  ],
  "globals": {
    "shallow": true,
    "render": true,
    "mount": true
  },
  "rules": {
    "indent": [
      true,
      "spaces",
      4
    ],
    "max-line-length": [
      true,
      150
    ],
    "no-var": "error",
    "no-arg": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": false,
    "no-unused-expression": true,
    "no-multiple-empty-lines": "error",
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "no-console": "warn",
    "comment-format": [
      true,
      "check-space"
    ],
    "no-unused-expressions": true,
    "no-consecutive-blank-lines": true,
    "no-construct": true,
    "no-debugger": true,
    "space-infix-ops": "error",
    "quotemark": [
      true,
      "single"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "newline-after-var": [
      true,
      "always"
    ],
    "react/prop-types": "off"
  }
}